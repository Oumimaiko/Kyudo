<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.kyudodatabaseuniformresourceidentifier.kyudo">

    <application
        android:name=".DaysApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DaysActivity"
            android:label="@string/title_activity_dates"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DaysResultActivity"
            android:label="@string/title_activity_input"
            android:parentActivityName=".DaysActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jp.kyudodatabaseuniformresourceidentifier.kyudo.DaysActivity"/>
        </activity>
        <activity
            android:name=".InputActivity"
            android:label="InputActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>